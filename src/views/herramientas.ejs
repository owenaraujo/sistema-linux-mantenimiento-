<% extend('layout/layout',{title:'Herramientas'}) %><%- include ('partials/nav')
%>

<h3 class="text-center h3">Inventario de Herramientas</h3>

<!-- Central Modal Small -->
<div
  class="modal fade"
  id="centralModalSm"
  tabindex="-1"
  role="dialog"
  aria-labelledby="myModalLabel"
  aria-hidden="true"
>
  <!-- Change class .modal-sm to change the size of the modal -->
  <div class="modal-dialog modal-sm" role="document">
    <form id="form">
      <div class="modal-content">
        <div class="modal-header tercero text-white text-center">
          <div class="modal-title h4" id="myModalLabel">
            Agrega una herramienta
          </div>
          <button
            type="button"
            class="close text-white"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div
            id="notificacionAdd"
            class="alert green-success text-white text-center p-2 d-none"
          >
            herramienta agregada con exito
            <button id="notificacionRemove" class="close text-white">
              <span id="notificacionRemove" aria-hidden="true">&times;</span>
            </button>
          </div>

          <div class="form-group">
            <select
              class="form-control custom-select"
              _msthash="2736318"
              _msttexthash="1130220"
              id="tipo"
              id=""
              class="mb-4"
            >
              <option selected="" _istranslated="1">tipo de herramienta</option>
              <option value="fas fa-cogs">mecanicas</option>
              <option value="far fa-hand-paper">manual</option>
              <option value="fas fa-tools">montaje</option>
              <option value="fas fa-hammer">golpe</option>
              <option value="fas fa-pencil-ruler">medicion</option>
              <option value="fas fa-cut">corte</option>
            </select>
          </div>
          <div>
            <input
              type="text"
              id="nombre"
              class="form-control mb-4"
              placeholder="nombre de la herramienta"
            />
          </div>
          <div>
            <input
              type="text"
              id="detalles"
              class="form-control mb-4"
              placeholder="detalles"
            />
          </div>
          <div>
            <input
              type="text"
              id="cantidad"
              class="form-control mb-4"
              placeholder="cantidad"
            />
          </div>
        </div>
        <div class="modal-footer">
          <button
            id="saveHerramienta"
            type="submit"
            class="btn cuarto text-white"
          >
            Guardar
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
<!-- Central Modal Small -->

<!-- Tabla-->

<div class="list-scroll2 col-11">
  <div class="card">
    <table class="table table-hover table-sm text-center text-capitalize">
      <thead class="card-header">
        <tr>
          <th>NÂ°</th>
          <th>tipo</th>
          <th>nombre</th>
          <th>detalles</th>
          <th>cantidad</th>
        </tr>
      </thead>
      <tbody class="card-body" id="listherramienta"></tbody>
    </table>
  </div>
</div>

