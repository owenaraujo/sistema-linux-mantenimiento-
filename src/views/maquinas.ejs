<% extend('layout/layout') %><%- include ('partials/nav') %>
<h1 class="text-center h3">Inventario de Equipos</h1>
<%- include ('partials/mensaje')%>

<div
  id="loader"
  class="alert alert-danger alert-dismissible fade show text-center editAlert d-none"
  role="alert"
>
  borrado
  <button id="loaderRemove" class="close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<!-- Central Modal Small -->
<div
  class="modal fade"
  id="centralModalSm"
  tabindex="-1"
  role="dialog"
  aria-labelledby="myModalLabel"
  aria-hidden="true"
>
  <!-- Change class .modal-sm to change the size of the modal -->
  <div class="modal-dialog modal-md" role="document">
    <form id="formMachines">
      <div class="modal-content">
        <div class="modal-header text-center">
          <h4 class="modal-title w-100" id="myModalLabel">
            Registro de Equipos
          </h4>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true" id="disminModal">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div
            id="notificacionAdd"
            class="alert green-success text-white p-2 d-none"
          >
            Equipo agregado con exito
            <button id="notificacionRemove" class="close text-white">
              <span id="notificacionRemove" aria-hidden="true">&times;</span>
            </button>
          </div>
          <!-- body  -->
          <div class="form-group">
            <input
              type="text"
              id="equipo"
              class="form-control"
              placeholder="equipo"
            />
          </div>
          <div class="row px-3 mb-2 justify-content-between">
            <select
              class="form-control w-50"
              _msthash="2736318"
              _msttexthash="1130220"
              id="tipo"
            >
              <option selected disabled _istranslated="1">tipo</option>
              <option value="1">electrica</option>
              <option value="2">mecanica</option>
              <option value="3">hidraulica</option>
            </select>
            <input
              type="text"
              id="codificacion"
              class="form-control w-45"
              placeholder="codificacion"
              onkeyup="validateCod(this)"
              style="text-transform: uppercase"
            />
            <div class="invalid-feedback w-50"></div>
            <div class="invalid-feedback w-45">
              Ingrese una codificacion correcta
            </div>
          </div>

          <div>
            <input
              type="text"
              id="serial"
              onkeyup="validateSer(this)"
              class="form-control mb-2"
              placeholder="serial"
              style="text-transform: uppercase"
            />
            <div class="invalid-feedback">Ingrese un serial correcto</div>
            <h1 class="d-none" id="ValidateSerial"></h1>
          </div>
          <div class="row px-3 mb-2 justify-content-between">
            <input
              type="text"
              id="marca"
              class="form-control w-50"
              placeholder="marca"
            />
            <input
              type="text"
              id="modelo"
              class="form-control w-45"
              placeholder="modelo"
            />
          </div>
          <div>
            <textarea
              id="funcionamiento"
              type="text"
              class="form-control mb-2"
              placeholder="funcionamiento y manejo"
            ></textarea>
          </div>
          <div>
            <textarea
              id="observaciones"
              type="text"
              class="form-control"
              placeholder="observaciones"
            ></textarea>
          </div>
          <!-- body -->
        </div>
        <div class="modal-footer text-center">
          <button id="btnSaveMachine" class="btn cuarto text-white">
            Guardar
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
<!-- Central Modal Small -->

<div class="container-fluid ml-1 mb-2 row col-12">
  <div id="listMachine" class="div-maquinas-scroll"></div>
</div>
<!-- <div class="div-ocultarScroll-hb mdl-color--grey-100"></div> -->

<div class="caja cuarto c-hand">
  <i class="fas fa-plus" data-toggle="modal" data-target="#centralModalSm"></i>
</div>

<script src="/maquinas.js"></script>
